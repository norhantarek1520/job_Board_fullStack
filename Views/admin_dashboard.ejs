<!DOCTYPE html>
<html lang="en">
<%- include('component/head') -%>


<body>
    <div class="single_slider   slider_bg_1">
    <%- include('component/header') -%>
           <!-- bradcam_area  -->
           <div class="bradcam_area ">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-xl-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            
                          </form>
                    </div>
                </div>
            </div>
        </div>

    <div class="container"  >

        <div class="table-wrapper" >              
            <div class="table-title" >
                <div class="row">
                    <div class="col-sm-6">
                        <h2 style="font-weight: bold; color: #dfe7f0; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); font-family: sans-serif;">Jobs Dashboard</h2>
                    </div>
                    <div class="col-sm-6 add-job-button text-right mt-3"> 
                        <a href="/post_job" class="btn btn-success" data-toggle="modal"> <span>Add New Job</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover" style="margin-bottom: 20px; margin-top: 20px; font-weight: bold; color: #dfe7f0; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); font-family: sans-serif;">
                <thead>
                <tr>
                    <th></th>
                    <th>title</th>
                    <th>job Type</th>
                    <th> More Details</th>
                    <th> Edit</th>
                    <th> Delete</th>
                </tr>
                </thead>
                <% jobs.forEach( job => { %>
                <tbody style="font-weight: bold; color: #000000; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); font-family: sans-serif;">
                <tr>
                    <td>
                    <span class="custom-checkbox">
                        <input type="checkbox" id="checkbox1" name="options[]" value="1">
                        <label for="checkbox1"></label>
                    </span>
                    </td>
                    <td><%= job.title%></td>
                    <td> <%= job.job_type %></td>
                    <td><a href="/job_details/<%= job.id %>"> More </a> Â </td>
                    <td><a href="/update_job/<%=job.id%>" > edit job</a></td>
                    <td><a href="/delete_job/<%=job.id %>" > delete job </a></td>
                    <td><a href="/job_appications/<%=job.id %>" > job appications </a></td>

                </tr>
                </tbody>
                <% }) %>

            </table>
            <div class="clearfix" style="margin-top: 10px; padding: 30px;">
                <ul class="pagination" style="margin-bottom: 20px;">
                <li class="page-item disabled"><a href="#">Previous</a></li>
                <li class="page-item"><a href="#" class="page-link">1</a></li>
                <li class="page-item"><a href="#" class="page-link">2</a></li>
                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
    
        </div>
    </div>
    
    <%- include('component/footer') -%> 
    </div>
    
    <%- include('component/include_files') -%> 

</body>
</html>
