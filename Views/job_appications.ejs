<!doctype html>
<html class="no-js" lang="zxx">
    <%- include('component/head') -%>
<body>
   
    <%- include('component/header') -%>
    <!-- bradcam_area  -->
    <div class="bradcam_area bradcam_bg_1">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text">
                        <h3>job_appications</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ bradcam_area  -->

    <!-- job_listing_area_start  -->
    <div class="job_listing_area plus_padding">
        <div class="container">
          <div class="row">
                    <!--- filter part -->
            <div class="col-lg-3">
              <div class="job_filter white-bg">
                  <div class="form_inner white-bg">
                      
                  </div>
              </div>
            </div>

            <div class="col-lg-9">
                <!-- Job component  -->
                <div class="job_lists m-0">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <% jobApplications.forEach(application=> { %>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="input_field">
                                                <label><%= application.id%> </label>
                                                <input type="text" placeholder="<%= application.id%>" name="name">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="col-md-6">
                                            <div class="input_field">
                                                <label><%= application.protfolio %></label>
                                                <input type="text" placeholder="protfolio" name="protfolio">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="col-md-12">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                  <button type="button" id="inputGroupFileAddon03"><i class="fa fa-cloud-upload" aria-hidden="true"></i>
                                                  </button>
                                                </div>
                                                <div class="custom-file">
                                                  <input type="file" class="custom-file-input" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" name="uploadcv">
                                                  <label class="custom-file-label" for="inputGroupFile03">Upload CV</label>
                                                </div>
                                              </div>
                                        </div>
                                        <br>
                                        <div class="col-md-12">
                                            <div class="submit_btn">
                                                <button class="boxed-btn3 w-100" type="submit">Apply Now</button>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>

                        </div>

                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="pagination_wrap">
                                                    <ul>
                                                        <li><a href="#"> <i class="ti-angle-left"></i> </a></li>
                                                        <li><a href="#"><span>01</span></a></li>
                                                        <li><a href="#"><span>02</span></a></li>
                                                        <li><a href="#"> <i class="ti-angle-right"></i> </a></li>
                                                    </ul>
                                                </div>
                                            </div>
                        </div>
                </div>
                
            </div>

          </div>
        </div>
    </div>
    <!-- job_listing_area_end  -->

    <%- include('component/footer') -%> 
    <%- include('component/include_files') -%> 
</body>

</html>